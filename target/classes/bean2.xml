<!--    开启组件扫描
        1、如果扫描多个包，就可以使用，隔开；也可以写其上一层的目录

-->
    <context:component-scan base-package="com.zfc.spring5.service"></context:component-scan>

    <!--扫描com.zfc.spring5包下的controller注解的所有内容-->
    <context:component-scan base-package="com.zfc.spring5" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"></context:include-filter>
    </context:component-scan>


    <!--扫描com.zfc.spring5包下除了controller注解以外的所有内容-->
    <context:component-scan base-package="com.zfc.spring5" use-default-filters="true">
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"></context:exclude-filter>
    </context:component-scan>
</beans>