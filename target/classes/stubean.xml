<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="stu" class="com.zfc.spring5.service.stu">
        <property name="courses">
            <array>
                <value><![CDATA[<<易筋经>>]]></value>
                <value><![CDATA[<<降龙十八掌>>]]></value>
            </array>
        </property>
        <property name="set">
            <set>
                <value>苦禅大师</value>
                <value>呐喊</value>
            </set>
        </property>
        <property name="list">
            <list>
                <value>ht</value>
                <value>zfc</value>
            </list>
        </property>
        <property name="map">
            <map>
                <entry key="java" value="JAVA"></entry>
                <entry key="python" value="PYTHON"></entry>
            </map>
        </property>

        <property name="courseList">
            <list>
                <ref bean="coures1"></ref>
                <ref bean="coures2"></ref>
            </list>
        </property>
    </bean>
    <bean id="coures1" class="com.zfc.spring5.dto.Course">
        <property name="cName" value="向阳而生"></property>
    </bean>
    <bean id="coures2" class="com.zfc.spring5.dto.Course">
        <property name="cName" value="向死而生"></property>
    </bean>
</beans>