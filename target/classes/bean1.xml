<!--        属性中有值要赋为空-->
        <bean id="book1" class="com.zfc.spring5.Book" >
            <property name="name">
                <null></null>
            </property>
        </bean>

        <!--当属性中有特殊符号时 （也可用 &lt***&gt ）-->
        <bean id="book" class="com.zfc.spring5.Book">
            <property name="name">
                <value><![CDATA[<<杀手>>]]></value>
            </property>
        </bean>


</beans>